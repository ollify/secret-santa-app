<div class="signup-container">
  <div class="form-box">
    <h3>New user?</h3>
    <%= button_to "Sign up for free", new_registration_path(resource_name), :method => 'get', :class => "btn-secondary" %><br />
    <h3>Or login with existing account</h3>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions" style="margin-bottom: 30px">
      <%= f.button :submit, "Log in", :class => "btn-secondary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>
